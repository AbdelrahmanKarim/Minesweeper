<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.SettingsActivity">

    <TextView
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/jakartasans"
        android:text="Difficulty"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bbbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20sp"
        android:background="#EA0202"
        android:fontFamily="@font/jakartasans"
        android:text="Beginner (8 x 8)"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/aaaa" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="#C81717"
        android:id="@+id/cccc"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/bbbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="30sp"
        android:text="Intermediate (16 x 16)"
        android:fontFamily="@font/jakartasans"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:background="#9A0C0C"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/dddd"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/cccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="30sp"
        android:text="Expert (24 x 24)"
        android:fontFamily="@font/jakartasans"
        />


    <TextView

        android:id="@+id/eeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:fontFamily="@font/jakartasans"
        android:text="Customize"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dddd" />

    <EditText
        android:id="@id/numberOfMines_id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eeee"
        android:hint="Mines"
        android:layout_marginStart="20sp"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/jakartasans"
        />
    <EditText
        android:layout_marginStart="20sp"
        android:id="@+id/rows_id"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfMines_id"
        android:hint="Rows"
        android:textSize="30sp"
        android:fontFamily="@font/jakartasans"
        />
    <EditText
        android:layout_marginStart="20sp"
        android:inputType="number"
        android:id="@+id/columns_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rows_id"
        android:hint="Columns"
        android:textSize="30sp"
        android:fontFamily="@font/jakartasans"
        />


    <TextView

        android:id="@+id/errorText_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/jakartasans"

        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/columns_id" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/saveSettings_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/roundbtn"
        android:fontFamily="@font/jakartasans"
        android:text="Save"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/errorText_id" />


</androidx.constraintlayout.widget.ConstraintLayout>